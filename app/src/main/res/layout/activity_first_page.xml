<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".FirstPage">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="326dp"
        android:id="@+id/listView"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/tableLayout" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/tableLayout"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="cathegoryClick"
                    android:gravity="left|top"
                    android:layout_gravity="center|left|top">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="KATEGORIE"
                        android:id="@+id/textView25"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:onClick="cathegoryClick"
                        android:layout_gravity="left|top"
                        android:gravity="left|top" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="addressClick"
                    android:layout_gravity="center|top"
                    android:gravity="center|top">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="   ADRESY   "
                        android:id="@+id/textView17"
                        android:onClick="addressClick"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/textView26"
                        android:layout_toRightOf="@+id/textView25"
                        android:layout_toEndOf="@+id/textView25"
                        android:gravity="center|top"
                        android:layout_alignBottom="@+id/textView26" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="filterClick"
                    android:layout_gravity="right|top"
                    android:gravity="right|top">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="FILTRY"
                        android:id="@+id/textView26"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:onClick="filterClick" />
                </TableRow>
            </LinearLayout>

        </RelativeLayout>
    </TableLayout>

</RelativeLayout>